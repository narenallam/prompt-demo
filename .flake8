[flake8]
max-line-length = 88
extend-ignore = 
    E203,  # whitespace before ':'
    W503,  # line break before binary operator (outdated rule)
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    chroma_db,
    *.egg-info
per-file-ignores =
    __init__.py:F401  # unused imports ok in __init__.py
